        <script src="//edge.ldscdn.org/cdn2/csp/ldsorg/script/common/data.js" type="text/javascript" charset="utf-8"> </script><script type="text/javascript">
            DATA.CDNPATH = '//edge.ldscdn.org/cdn2';
            DATA.CDN2PATH = '//edge.ldscdn.org/cdn2';
