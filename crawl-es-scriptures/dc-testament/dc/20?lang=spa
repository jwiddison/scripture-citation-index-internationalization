        <script type="text/javascript">
                    $(document).ready(function() {
                        if (document.getElementById('searchQueryTerm')) {
                            document.getElementById('searchQueryTerm').scrollIntoView(true);
                            scrollElmVert(document.getElementById('searchQueryTerm'),-50);
                        }
                    });

                    function scrollElmVert(el,num) {
                        var re=/html$/i;
                        while(!re.test(el.tagName) && ( 1 > el.scrollTop)) el=el.parentNode;
                        if(0 < el.scrollTop) el.scrollTop += num;
                    }
                </script>
