                    function scrollElmVert(el,num) {
                        var re=/html$/i;
                        while(!re.test(el.tagName) && ( 1 > el.scrollTop)) el=el.parentNode;
                        if(0 < el.scrollTop) el.scrollTop += num;
                    }
