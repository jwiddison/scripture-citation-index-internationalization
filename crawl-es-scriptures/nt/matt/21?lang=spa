        <script type="text/javascript">
            yepnope({
                load: [
                    "//edge.ldscdn.org/cdn2/csp/ldsorg/ver/scripts/medialoader/lds.mediaLoader1.6.0.min.js",
                    "//edge.ldscdn.org/cdn2/common/scripts/other/handlebars/handlebars1.0.0.min.js"
                ]
                ,
                complete:function() {
                    // multiple media objects on page
                    var mediaList = {"la-entrada-triunfal-del-senor-en-jerusalen":{"title":"La entrada triunfal del Señor en Jerusalén","params":{"@videoPlayer":"1534810970001","playerID":"1241672435001","playerKey":"AQ~~%2CAAABIRt7e9E~%2C-nmsgKgcZmmQRg2-S1Xjc58_hSiPgONj"},"type":"bc","videos":{"video-mp4":"http://broadcast.lds.org/the-life-of-jesus-christ-bible-videos/2011-10-017-the-lords-triumphal-entry-into-jerusalem-1000k-spa.mp4?download=true"}}};
                    
                    // setup the plugin
                    $('#media').mediaLoader({
    
                        template:"#media-template",
                        mediaList:mediaList,
                        playerOptions : {
                            "wmode":"transparent",
                            "isVid":"true",
                            "isUI":"true",
                            "dynamicStreaming":"true",
                            "bgcolor":"#fff",
                            "width":470,
                            "height":235,
                            "playerID":'1241672435001',
                            "playerKey":'AQ~~%2CAAABIRt7e9E~%2C-nmsgKgcZmmQRg2-S1Xjc58_hSiPgONj'
                        },
                        onopen:function(event, self){
                            // highlight navigation
                            $('h3 + .media-links a').removeClass('active');
                            $('h3 + .media-links a[href="#media='+self.curState+'"]').addClass('active');
    
                            // setup download menu link
                            clickMenu('.download-menu','.download','fade');
                            // handle close in download menu
                            $('.download-menu .close').click(function() {
                                $(this).parent().prev().click(); 
                                return false;
                            });
                            //get down below fixed navigation bar, but only if we need to
                            var targetTop = self.element.offset().top-65;
                            if($(window).scrollTop() > targetTop) {
                             window.scrollTo(0,targetTop);
                            }
                            if(self.curMedia.type != "image"){
                             $(".media-placeholder",self.element).css("min-height",self.options.playerOptions.height);
                            }
                        },
                        onclose:function(){
                            // remove navigation highlighting
                            $('h3 + .media-links a').removeClass('active');
                        }
                    });
                    
                    if(DATA.CLANG === "ase") {
                        if (mediaList["ase-video"]){
                            $('#media').mediaLoader("open","ase-video");
                        }
                    }
    
                }
            });

