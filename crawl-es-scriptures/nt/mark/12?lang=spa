                    $('#media').mediaLoader({
    
                        template:"#media-template",
                        mediaList:mediaList,
                        playerOptions : {
                            "wmode":"transparent",
                            "isVid":"true",
                            "isUI":"true",
                            "dynamicStreaming":"true",
                            "bgcolor":"#fff",
                            "width":470,
                            "height":235,
                            "playerID":'1241672435001',
