                complete:function() {
                    // multiple media objects on page
                    var mediaList = {"jesus-ensena-sobre-las-blancas-de-la-viuda":{"title":"Jesús enseña sobre las blancas de la viuda","params":{"@videoPlayer":"1534810958001","playerID":"1241672435001","playerKey":"AQ~~%2CAAABIRt7e9E~%2C-nmsgKgcZmmQRg2-S1Xjc58_hSiPgONj"},"type":"bc","videos":{"video-mp4":"http://broadcast2.lds.org/the-life-of-jesus-christ-bible-videos//2011-10-00 9-jesus-teaches-about-the-widows-mites-1000k-spa.mp4?download=true"}}};
                    
